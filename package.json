{
  "name": "rtl-boilerplate",
  "version": "1.0.0",
  "description": "A fast biolerplate for starting a ltr to rtl project",
  "main": "main.js",
  "scripts": {
    "pugjs": "pug ./src/pug/templates --out ./build --watch --obj ./pug.config.js",
    "postcss": "postcss ./src/custom.scss -o ./build/Content/custom.css --watch",
    "prod": "rar a ./build.zip ./build/*"
  },
  "author": "djawad98",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.3.2",
    "cssnano": "^5.0.8",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "postcss-scss": "^4.0.0",
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6"
  },
  "browserslist": [
    "defaults",
    "not dead",
    "> 1%",
    "IE > 11",
    "last 2 versions"
  ]
}
