{
  "name": "rtl-boilerplate",
  "version": "1.0.0",
  "description": "A fast biolerplate for starting a ltr to rtl project",
  "main": "main.js",
  "scripts": {
    "pugjs": "pug ./src/pug/templates --out ./build --watch --obj ./pug.config.js",
    "sass": "sass ./src/custom.scss ./build/Content/custom.css --watch --style=compressed",
    "prod": "rar a ./build.zip ./build/*"
  },
  "author": "djawad98",
  "license": "ISC",
  "devDependencies": {
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.38.0"
  }
}
